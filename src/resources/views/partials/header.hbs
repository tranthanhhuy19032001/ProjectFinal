                    <li role="separator" class="divider"></li>
                    <a class="dropdown-item" rel="nofollow" href="/user/logout" title="Thoát"><i class="fa fa-sign-out" aria-hidden="true"></i> Thoát</a>
                </ul>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 d-flex justify-content-end" style="margin-top:20px ;">
            <div style="margin-right:10px ;">
                <a class="btn btn-outline-primary" href="/dangky">
                    <i class="fa fa-user"></i> Đăng ký
                </a>
            </div>
            <div>
                <a class="btn btn-outline-success" href="/dangnhap">
                    <i class="fa fa-user"></i> Đăng nhập
                </a>
            </div>
        </div>
        {{/if}}
        
    </div>
</div>

