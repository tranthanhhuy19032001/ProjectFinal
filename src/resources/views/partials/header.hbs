<div class="container" style="width:70%;">
    <div class="row">
        <div class="col-md-8">
            <a href="/">
                <img src="/img/logo.png" alt="">
            </a>
        </div>
        {{#if currentUser}}
        <div class="col-md-4 d-flex justify-content-end" style="margin-top:20px ;">
            <div class="welcome-user">
                {{#with currentUser}}
                <p>Xin chào, <strong><a href="/user/information">{{this.name}}</a></strong></p>
                {{/with}}
            </div>

            <div class="user-dropdown">
                <button class="btn text-light bg-danger dropdown-toggle" type="button" id="user-dropdown-id" data-bs-toggle="dropdown">Quản lý tài khoản</button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" rel="nofollow" href="/user/information"><i class="fa fa-user"></i> Thông tin tài khoản</a></li>
                    <li><a class="dropdown-item" rel="nofollow" href="/create" title="Đăng tin"><i class="fa fa-plus-circle" aria-hidden="true"></i> Đăng tin</a></li>
